<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="706dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.0"
        >
        <EditText
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:inputType="textAutoComplete"
            android:hint="@string/heart_rate_value"
            android:ems="10"
            android:id="@+id/heart_rate_value"
            android:layout_marginStart="8dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"/>
        <TextView
            android:id="@+id/startTime"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPickStart"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/pick_date_and_time" />

        <Button
            android:id="@+id/btnPushBPM"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/push_heart_rate" />
        <Button
            android:id="@+id/btnChart"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/chart" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>